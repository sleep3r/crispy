{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Crispy",
  "version": "0.6.3",
  "identifier": "com.example.crispy",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Crispy",
        "width": 720,
        "height": 820,
        "minWidth": 680,
        "minHeight": 700,
        "resizable": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ],
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": [
            "**"
          ],
          "requireLiteralLeadingDot": false
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "resources": [
      "resources/**/*"
    ],
    "macOS": {
      "entitlements": "Entitlements.plist",
      "hardenedRuntime": true,
      "minimumSystemVersion": "12.3"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEMyQTRBMDQyRjAyRTk2MzYKUldRMmxpN3dRcUNrd3NUUHdoTDgrdGlWZmFZQXhuT1NiTlNYdFkrSzhCVm9uaXFCVTdHbFpPOWMK",
      "endpoints": [
        "https://github.com/sleep3r/crispy/releases/latest/download/latest.json"
      ]
    }
  }
}
