{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Crispy",
  "version": "0.3.1",
  "identifier": "com.example.crispy",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Crispy",
        "width": 720,
        "height": 680,
        "minWidth": 680,
        "minHeight": 620,
        "resizable": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"],
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$DOCUMENT/Crispy/Recordings/**",
          "$DOCUMENT/Crispy/Transcriptions/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": ["resources/**/*"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
